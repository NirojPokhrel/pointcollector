<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.niroj.marriagepointcollector"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.niroj.activity.StartPageActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.niroj.activity.CreateGameActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.niroj.activity.CreateNewPlayerActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.niroj.activity.PlayerListActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.niroj.activity.GameHistoryActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.niroj.activity.PlayerInfoActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.niroj.activity.PointCollectorActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.niroj.activity.SimpleXYPlotActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>